<div class="list">
	<div class="item item-checkbox checkbox-balanced item-checkbox-right popup_list" ng-repeat="noc in nocArray">
      <label class="checkbox">
        <input type="checkbox" ng-model="noc.checked"
        ng-checked="noc.checked" ng-change="changeNoc({{$index}})">   
      </label><h2 class="popup_label">{{noc.name}}</h2>        
    </div>
</div>