<!-- <ion-view view-title="{{manure_obj.title}}"> -->
<ion-view view-title="Fertilizer Application">
<ion-nav-title ng-style={{title_Style}}>
    <span>Fertilizer Application</span>
</ion-nav-title>
	<ion-content ng-click="closeDrawer()" class="main_page_bg ioncntnt_pad has-footer" ng-style="content_Style"> 
    <ion-list>
        <div ng-repeat="activity in manure_obj.activities">
          <ion-item class="item-stable acc_text"
                    ng-click="toggleGroup(activity)"
                    style="background: #A18154;"
                    ng-class="{active: isGroupShown(activity)}">
              <i class="icon" ng-class="isGroupShown(activity) ? 'ion-minus' : 'ion-plus'"></i>
            &nbsp;
            {{activity.name}}
          </ion-item>
          <div class="list_div item-accordion"
                    ng-repeat="item in activity.details"
                    ng-show="isGroupShown(activity)">

              <div class="row">      
            <div class="col col-60 acc_body" ng-class = "item.is_parent?'a':'b'">{{item.name}}</div>
                <input type="text" ng-pattern="/^[0-9]{1,3}(\.?|(\.[0-9]{1,2}))?$/" ng-keyup="floatValidation(activity,item,item.value);areaCompareValidation(activity,item,item.key,item.value)" class="col" ng-show="item.type == 3"  ng-model="item.value" ng-readonly= "flag" ng-class="flag?'ab':'acc_input'" onpaste="return false;">

                <input type="text" ng-pattern="/^[0-9]{1,6}(\.?|(\.[0-9]{1,2}))?$/" ng-keyup="floatValidation_6(activity,item,item.value);areaCompareValidation(activity,item,item.key,item.value)" class="col" ng-show="item.type == 6"  ng-model="item.value" ng-readonly= "flag" ng-class="flag?'ab':'acc_input'" onpaste="return false;">

                <input type="text" ng-pattern="/^[0-9]{1,5}?$/" ng-keyup="floatValidation_5(activity,item,item.value);areaCompareValidation(activity,item,item.key,item.value)" class="col" ng-show="item.type == 5"  ng-model="item.value" ng-readonly= "flag" ng-class="flag?'ab':'acc_input'" onpaste="return false;">
               
            <!--     <div class="col acc_input dd_wrap"  ng-click="dropdownClicked(activity,item,'manure')" ng-show="item.type == 4.1" ng-class="flag?'ab':'acc_input'">
                 {{item.value}}
                  <i class="ion icon ion-arrow-down-b down_arrow down_arrow1"></i>
                </div> 
                <div class="col acc_input dd_wrap"  ng-click="dropdownClicked(activity,item,'source')" ng-show="item.type == 4.2" ng-class="flag?'ab':'acc_input'">
                 {{item.value}}
                  <i class="ion icon ion-arrow-down-b down_arrow down_arrow1"></i>
                </div>  -->
              <div class="col inputTypeText1" ng-show="item.type == 4.1" ng-class="flag?'ab':'acc_input'" >
               <select ng-model="item.value"  
                  ng-options="obj.name as obj.name for obj in manureArray"
                  ng-change="getChange(activity,item,'mn',item.value)"
                  ng-show="item.type == 4.1" class="col dd_wrap" ng-class="flag?'ab':'acc_input'" 
                  ng-disabled="flag" required>
                  <option value="">Select</option>
               </select>   
               </div>
               <div class="col inputTypeText1" ng-show="item.type == 4.2" ng-class="flag?'ab':'acc_input'" >             
               <select ng-model="item.value"  
                  ng-options="obj.name as obj.name for obj in sourceArray"
                  ng-change="getChange(activity,item,'sr',item.value)"
                  ng-show="item.type == 4.2" class="col dd_wrap" ng-class="flag?'ab':'acc_input'" 
                  ng-disabled="flag" required>
                  <option value="">Select</option>
               </select>
              </div>
              </div>
          </div>
        </div>
    </ion-list>

    <div style="float: right">
      <table>
        <tr>
          <button class="ion icon ion-plus add_remove" ng-click="add()" ng-disabled="flag">
          </button>
        </tr>
        <tr>  
          <button class="ion icon ion-minus add_remove" ng-click="remove()" ng-disabled="flag">
          </button>
        </tr>  
      </table>    
    </div> 
    <pre>                  
		  
		  
		  
		  
    </pre>
	</ion-content>
	<div class="bar bar-footer">
		<div class="row" style="padding: 0px;margin-top: -7px;">
			<button class="button col saveBtn"  ng-click='save()' ng-disabled="flag">Save</button>
			<button class="button col submitBtn"  ng-click='submit()' ng-disabled="flag">Submit</button>
		</div>
	</div>
</ion-view>	