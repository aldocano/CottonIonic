<ion-view view-title="Land And Irrigation Details">
	<ion-nav-title ng-style={{title_Style}}>
	    <span>Land And Irrigation Details</span>
	</ion-nav-title>
	<ion-content ng-click="closeDrawer()" class="main_page_bg ioncntnt_pad has-footer" ng-style="content_Style">

    <ion-list>
    	<div ng-repeat="activity in land_and_irrigation_details_obj.activities">
    		<ion-item class="item-stable acc_text"
                    ng-click="toggleGroup(activity)"
                    style="background: #A18154;"
                    ng-class="{active: isGroupShown(activity)}">
              <i class="icon" ng-class="isGroupShown(activity) ? 'ion-minus' : 'ion-plus'"></i>
            &nbsp;
            {{activity.name}}
            </ion-item>
            <div class="list_div item-accordion"
    	    	 ng-repeat="item in activity.details"
            	 ng-show="isGroupShown(activity)">
      			<div class="row">
      				<div class="col col-60 acc_body" ng-class = "item.is_parent?'a':'b'">{{item.name}}</div>
      				<!-- Land area -->
      				<input type="text" ng-pattern="/^[0-9]{1,3}(\.?|(\.[0-9]{1,2}))?$/" ng-keyup="floatValidation(activity,item,item.value);areaCompareValidation(activity,item,item.key,item.value)" class="col" ng-show="item.type == 3"  ng-model="item.value" ng-readonly= "flag" ng-class="flag?'ab':'acc_input'" onpaste="return false;">
      				<!-- irrigated from(soil preparation) -->
      				<div class="col" ng-show="item.type == 7" style="background-color: #45BFAE; max-height: 34px; text-align: center" ng-class="flag?'ab':'acc_input'" style="height: inherit;">
                		<label class="checkbox" style="margin-top: -8px">
                       		<input type="checkbox" ng-model="item.value" ng-disabled= "flag">
                        	<div class="track">
                        		<div class="handle"></div>
                        	</div>
                    	</label>
                	</div>
                	
                	<input type="text" ng-keyup="validString(activity,item,item.value)" ng-model="item.value" ng-show="item.type == 1" class="col" ng-disabled= "flag" ng-class="flag?'ab':'acc_input'" onpaste="return false;"> 
      				<!-- select option for season -->
      				<div class="col inputTypeText1" ng-show="item.type == 4.1" ng-class="flag?'ab':'acc_input'">
		                <select ng-model="item.value"  
		                  ng-options="obj.name as obj.name for obj in landAndIrrigationDetailsSeason"
		                  ng-change="getChange(activity,item,'season',item.value)"
		                  ng-show="item.type == 4.1" class="col dd_wrap" 
		                  ng-disabled= "flag"
		                  ng-class="flag?'ab':'acc_input'" 
		                  required>
		                  <option value="">Select</option>
		                </select>
               		</div>
               		<!-- select option for main crop -->
               		<div class="col inputTypeText1" ng-show="item.type == 4.2" ng-class="flag?'ab':'acc_input'">
		                <select ng-model="item.value"  
		                  ng-options="obj.name as obj.name for obj in landAndIrrigationDetailsMainCrop"
		                  ng-change="getChange(activity,item,'mc',item.value)"
		                  ng-show="item.type == 4.2" class="col dd_wrap" 
		                  ng-disabled= "flag"
		                  ng-class="flag?'ab':'acc_input'" 
		                  required>
		                  <option value="">Select</option>
		                </select>
               		</div>
               		<!-- select option for intercrop -->
               		<div class="col inputTypeText1" ng-show="item.type == 4.3" ng-class="flag?'ab':'acc_input'">
		                <select ng-model="item.value"  
		                  ng-options="obj.name as obj.name for obj in landAndIrrigationDetailsIntercrop"
		                  ng-change="getChange(activity,item,'ic',item.value)"
		                  ng-show="item.type == 4.3" class="col dd_wrap" 
		                  ng-disabled= "flag"
		                  ng-class="flag?'ab':'acc_input'" 
		                  required>
		                  <option value="">Select</option>
		                </select>
               		</div>
               		<!-- select option for source of irrigation -->
               		<div class="col inputTypeText1" ng-show="item.type == 4.4" ng-class="flag?'ab':'acc_input'">
		                <select id="soi_id" ng-model="item.value"  
		                  ng-options="obj.name as obj.name for obj in landAndIrrigationDetailsSourceOfIrrigation"
		                  ng-change="getChange(activity,item,'soi',item.value)"
		                  ng-show="item.type == 4.4" class="col dd_wrap" 
		                  ng-disabled= "flag"
		                  ng-class="flag?'ab':'acc_input'" multiple="multiple"
		                  required>
		                </select>
               		</div>
               		<!-- select option for type of irrigation -->
               		<div class="col inputTypeText1" ng-show="item.type == 4.5" ng-class="flag?'ab':'acc_input'">
		                <select ng-model="item.value"
		                  ng-options="obj.name as obj.name for obj in landAndIrrigationDetailsTypeOfIrrigation"
		                  ng-change="getChange(activity,item,'toi',item.value)"
		                  ng-show="item.type == 4.5" class="col dd_wrap" 
		                  ng-disabled= "flag || item.status"
		                  ng-class="flag || item.status?'ab':'acc_input'" multiple="multiple"
		                  required>
		                </select>
               		</div>
      			</div>

  	        </div>
    	</div>
    </ion-list> 
    
    <div style="float: right">
      <table>
        <tr>
          <button class="ion icon ion-plus add_remove" ng-click="add()" ng-disabled="flag"></button>
        </tr>
        <tr>
          <button class="ion icon ion-minus add_remove" ng-click="remove()" ng-disabled="flag"></button>
        </tr>  
      </table>  
    </div>
    <pre>                  
		  		  
		  
		  
		  
		  
		  
		  
    </pre>
	</ion-content>
	<div class="bar bar-footer">
		<div class="row" style="padding: 0px;margin-top: -7px;">
			<button class="button col saveBtn"  ng-click='save()' ng-disabled="flag">Save</button>
			<button class="button col submitBtn"  ng-click='submit()' ng-disabled="flag">Submit</button>
		</div>
	</div>	
</ion-view>	