<ion-view view-title="Irrigation Details">
<ion-nav-title ng-style={{title_Style}}>
    <span>Irrigation Details</span>
</ion-nav-title>
	<ion-content ng-click="closeDrawer()" class="main_page_bg ioncntnt_pad has-footer" ng-style="content_Style">
    <ion-list>
        <div ng-repeat="activity in irrigation_details_obj.activities">
          <ion-item class="item-stable acc_text"
                    ng-click="toggleGroup(activity)"
                    style="background: #A18154;"
                    ng-class="{active: isGroupShown(activity)}">
              <i class="icon" ng-class="isGroupShown(activity) ? 'ion-minus' : 'ion-plus'"></i>
            &nbsp;
            {{activity.name}}
          </ion-item>
          <div class="list_div item-accordion"
                    ng-repeat="item in activity.details"
                    ng-show="isGroupShown(activity)">

              <div class="row">      
                <div class="col col-60 acc_body" ng-class = "item.is_parent?'a':'b'">{{item.name}}</div>
                <input type="text" ng-pattern="/^[0-9]{1,3}(\.?|(\.[0-9]{1,2}))?$/" ng-keyup="floatValidation(activity,item,item.value);areaCompareValidation(activity,item,item.key,item.value)" class="col" ng-show="item.type == 3"  ng-model="item.value" ng-readonly= "flag" ng-class="flag?'ab':'acc_input'" style="height: inherit;" onpaste="return false;">
                <!-- here -->
                <input type="text" ng-pattern="/^[0-9]{1,3}?$/" ng-keyup="floatValidation_for_domr(activity,item,item.value);areaCompareValidation(activity,item,item.key,item.value)" class="col" ng-show="item.type == 1"  ng-model="item.value" ng-readonly= "flag" ng-class="flag?'ab':'acc_input'" style="height: inherit;" onpaste="return false;">

                <!--toggle button click -->
                <input type="text" ng-pattern="/^[0-9]{1,3}?$/" ng-keyup="floatValidation1(activity,item,item.value);areaCompareValidation(activity,item,item.key,item.value)" class="col" ng-show="item.type == 4"  ng-model="item.value" ng-readonly= "item.status || flag" ng-class="item.status || flag?'ab':'acc_input'" style="height: inherit;" onpaste="return false;">

                <input type="text" ng-pattern="/^[0-9]{1,6}(\.?|(\.[0-9]{1,2}))?$/" ng-keyup="floatValidation_for_cost_of_oil(activity,item,item.value);areaCompareValidation(activity,item,item.key,item.value)" class="col" ng-show="item.type == 5"  ng-model="item.value" ng-readonly= "item.status || flag" ng-class="item.status || flag?'ab':'acc_input'" style="height: inherit;" onpaste="return false;">

                <div class="col pad_zero" ng-show="item.type == 2" ng-class="flag?'ab':'acc_input'">
                <label class="checkbox">
                       <input type="checkbox" ng-model="item.value" ng-disabled= "flag" ng-click="flag_qty_cost(activity,item,item.value)">
                       <div class="track">
                         <div class="handle"></div>
                       </div>
                    </label>
                </div>    
              </div>
          </div>
        </div>
    </ion-list>

    <div style="float: right">
      <table>
        <tr>
          <button class="ion icon ion-plus add_remove" ng-click="add()" ng-disabled="flag">
          </button>
        </tr>
        <tr>
          <button class="ion icon ion-minus add_remove" ng-click="remove()" ng-disabled="flag">
          </button>
        </tr>  
      </table>    
    </div>    
    <pre>                  
		  		  
		  
		  
		  
		  
		  
		  
    </pre>
	</ion-content>
	<div class="bar bar-footer">
		<div class="row" style="padding: 0px;margin-top: -7px;">
			<button class="button col saveBtn"  ng-click='save()' ng-disabled="flag">Save</button>
			<button class="button col submitBtn"  ng-click='submit()' ng-disabled="flag">Submit</button>
		</div>
	</div>
</ion-view>	